@model EntityLayer.Concrete.Heading
@{
    ViewBag.Title = "NewHeading";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}

<h2>Başlık Ekle</h2>

@using (Html.BeginForm("NewHeading", "WriterPanel", FormMethod.Post))
{
    <div class="form-group">

        @Html.TextBoxFor(x => x.HeadingName, new { @class = "form-control mt-2", @placeholder = "Yeni Başlık Girin" })
        @Html.ValidationMessageFor(x => x.HeadingName, "", new { @class = "text-danger  mt-2" })

        @Html.DropDownListFor(x => x.CategoryId, (List<SelectListItem>)ViewBag.vlc, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.CategoryId, "", new { @class = "text-danger  mt-2" })

        <br />
        <button class="btn btn-danger"><i class="fas fa-save mr-2"></i>Kaydet</button>
    </div>
}
