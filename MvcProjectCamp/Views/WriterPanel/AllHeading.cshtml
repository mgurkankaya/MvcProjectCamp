@using EntityLayer.Concrete
@using PagedList
@using PagedList.Mvc
@model PagedList.IPagedList<Heading>
@{
    ViewBag.Title = "AllHeading";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
    string ButtonIf = "";
    string RenkIf = "";
}

<div class="card">
    <div class="card-header">
        <h3 class="card-title">Başlık İşlemleri</h3>

        <div class="card-tools">
            <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                <i class="fas fa-minus"></i>
            </button>
            <button type="button" class="btn btn-tool" data-card-widget="remove" data-toggle="tooltip" title="Remove">
                <i class="fas fa-times"></i>
            </button>
        </div>
    </div>
    <div class="card-body p-0">
        <table class="table table-striped projects">
            <thead>
                <tr>
                    <th style="width: 2%">
                        #
                    </th>
                    <th style="width: 30%">
                        Başlık Adı
                    </th>
                    <th style="width: 20%">
                        Yazar
                    </th>

                    <th style="width: 18%" class="text-center">
                        Kategori
                    </th>
                    <th style="width: 30%" class="text-center">
                        İşlemler
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    if (item.HeadingStatus == true)
                    {

                        ButtonIf = "Arşivle";
                        RenkIf = "btn-danger";

                    }
                    else
                    {

                        ButtonIf = "Yayınla";
                        RenkIf = "btn-success";
                    }
                    <tr>
                        <td>
                            @item.HeadingId
                        </td>
                        <td>
                            <a>
                                @item.HeadingName
                            </a>
                            <br />
                            <small>
                                @(((DateTime)item.HeadingDate).ToString("dd-MMM-yyyy"))
                            </small>
                        </td>
                        <td>
                            <ul class="list-inline">
                                <li class="list-inline-item">
                                    <img alt="Avatar" class="table-avatar" src="@item.Writer.WriterImage">
                                </li>
                            </ul>
                        </td>

                        <td class="project-state">
                            <span class="badge badge-success">@item.Category.CategoryName</span>
                        </td>
                        <td class="project-actions text-right">
                            <a class="btn btn-primary btn-sm" href="/Default/Headings/@item.HeadingId">
                                <i class="fas fa-folder">
                                </i>
                                Gör
                            </a>
                            <a class="btn btn-info btn-sm" href="/WriterPanelContent/AddContent/@item.HeadingId">
                                <i class="fas fa-pencil-ruler">
                                </i>
                                Bu Başlığa Yaz
                            </a>
                    
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="card-footer">
        <nav aria-label="Contacts Page Navigation">
            <ul class="pagination justify-content-center m-0">
                @Html.PagedListPager((IPagedList)Model,page=>Url.Action("AllHeading",new {page}), new PagedListRenderOptions
           {
               LiElementClasses = new List<string>
               { "page-link"}
           })
                
            </ul>
        </nav>
    </div>
    <!-- /.card-body -->
</div>