@using EntityLayer.Concrete
@model List<Writer>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Yazarlar</h2>

<section class="content">

    <!-- Default box -->
    <div class="card card-solid">
        <div class="card-body pb-0">
            <div class="row d-flex align-items-stretch">
                @foreach (var item in Model)
                {

              
                <div class="col-12 col-sm-6 col-md-4 d-flex align-items-stretch">
                    <div class="card bg-light">
                        <div class="card-header text-muted border-bottom-0">
                            @item.WriterTitle
                        </div>
                        <div class="card-body pt-0">
                            <div class="row">
                                <div class="col-7">
                                    <h2 class="lead"><b>@item.WriterName @item.WriterSurname</b></h2>
                                    <p class="text-muted text-sm"><b>Hakkında: </b>  @item.WriterAbout </p>
                                    <ul class="ml-4 mb-0 fa-ul text-muted">
                                        <li class="small"><span class="fa-li"><i class="fas fa-lg fa-envelope"></i></span> @item.WriterMail</li>
                                    </ul>
                                </div>
                                <div class="col-5 text-center">
                                    <img src="@item.WriterImage" alt="" class="img-circle img-fluid">
                                </div>
                            </div>
                        </div>
                        <div class="card-footer">
                            <div class="row">
                                <div class="col-3 text-left">
                                    <a href="/Writer/DeleteWriter/@item.WriterId" class="btn btn-outline-danger"><i class="fas fa-trash"></i></a>
                                  

                                </div>
                                <div class="col-9 text-right">



                                    <a href="#" class="btn btn-outline-success">
                                        <i class="fas fa-comment"></i> Yazarın Başlıkları
                                    </a>

                                    <a href="/Writer/EditWriter/@item.WriterId" class="btn btn-outline-secondary"><i class="fas fa-edit"></i></a>

                                </div>

                            </div>
                        </div>
                    </div>
                </div>

                }
                
                
               
                
              
            
            </div>
        </div>
        <!-- /.card-body -->
        <div class="card-footer">
            <nav aria-label="Contacts Page Navigation">
                <ul class="pagination justify-content-center m-0">
                    <li class="page-item active"><a class="page-link" href="#">1</a></li>
                    <li class="page-item"><a class="page-link" href="#">2</a></li>
                    <li class="page-item"><a class="page-link" href="#">3</a></li>
                    <li class="page-item"><a class="page-link" href="#">4</a></li>
                    <li class="page-item"><a class="page-link" href="#">5</a></li>
                    <li class="page-item"><a class="page-link" href="#">6</a></li>
                    <li class="page-item"><a class="page-link" href="#">7</a></li>
                    <li class="page-item"><a class="page-link" href="#">8</a></li>
                </ul>
            </nav>
        </div>
        <!-- /.card-footer -->
    </div>
    <!-- /.card -->

</section>


<a class="btn btn-outline-primary mt-2" href="/Writer/AddWriter"><i class="fas fa-plus mr-2"></i>Yeni Yazar</a>