@model EntityLayer.Concrete.Writer
@{
    ViewBag.Title = "EditWriter";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Yazar Güncelle</h2>

@using (Html.BeginForm("EditWriter", "Writer", FormMethod.Post))
{
    <div class="form-group">
        @Html.HiddenFor(x => x.WriterId)
        @Html.TextBoxFor(x => x.WriterName, new { @class = "form-control mt-2" })
        @Html.ValidationMessageFor(x => x.WriterName, "", new { @class = "text-danger  mt-2" })
        @Html.TextBoxFor(x => x.WriterSurname, new { @class = "form-control mt-2" })
        @Html.ValidationMessageFor(x => x.WriterSurname, "", new { @class = "text-danger  mt-2" })
        @Html.TextBoxFor(x => x.WriterImage, new { @class = "form-control mt-2", @placeholder = "Görsel URL" })
        @Html.TextBoxFor(x => x.WriterMail, new { @class = "form-control mt-2" })
        @Html.TextAreaFor(x => x.WriterAbout, new { @class = "form-control mt-2", @cols = 80, @rows = 5 })
        @Html.ValidationMessageFor(x => x.WriterAbout, "", new { @class = "text-danger  mt-2" })
        @Html.TextBoxFor(x => x.WriterPassword, new { @class = "form-control mt-2" })
        @Html.TextBoxFor(x => x.WriterTitle, new { @class = "form-control mt-2" })
        @Html.ValidationMessageFor(x => x.WriterTitle, "", new { @class = "text-danger  mt-2" })
        <br />
        <button class="btn btn-success"><i class="fas fa-sync mr-2"></i>Güncelle</button>
    </div>
}