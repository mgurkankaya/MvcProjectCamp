    with font-awesome or any other icon font library -->
                        <li class="nav-item">
                            <a href="/Gallery/Index" class="nav-link">
                                <i class="nav-icon fas fa-link	"></i>
                                <p class="text-warning">
                                    Siteyi Gör
                                </p>
                            </a>
                        </li>


                        <li class="nav-item has-treeview menu-open">
                                                   
                                <li class="nav-item">
                                    <a href="/Statistic/Index" class="nav-link">
                                        <i class="fas fa-tachometer-alt nav-icon"></i>
                                        <p class="text-cyan">Dashboard</p>
                                    </a>
                                </li>

                                <li class="nav-item">
                                    <a href="/Chart/Index" class="nav-link">
                                        <i class="fas fa-chart-bar nav-icon"></i>
                                        <p>Grafik</p>
                                    </a>
                                </li>


                            
                    



                       

                        <li class="nav-item">
                            <a href="/AdminCategory/Index" class="nav-link">
                                <i class="nav-icon fa fa-list	"></i>
                                <p>
                                    Kategoriler
                                </p>
                            </a>
                        </li>
                        @if (User.IsInRole("A"))
                        {

                            <li class="nav-item">
                                <a href="/Writer/Index" class="nav-link">
                                    <i class="nav-icon fas fa-user	"></i>
                                    <p>
                                        Yazarlar
                                    </p>
                                </a>
                            </li>

                            <li class="nav-item">
                                <a href="/Heading/Index" class="nav-link">
                                    <i class="nav-icon fas fa-heading	"></i>
                                    <p>
                                        Başlıklar
                                    </p>
                                </a>
                            </li>
                        }
                        <li class="nav-item">
                            <a href="/About/Index" class="nav-link">
                                <i class="nav-icon fas fa-info	"></i>
                                <p>
                                    Hakkımızda
                                </p>
                            </a>
                        </li>
